<h1>Listing contestants</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Nickname</th>
    <th>Description</th>
    <th>Date added</th>
    <th>Id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contestants.each do |contestant| %>
  <tr>
    <td><%= contestant.first_name %></td>
    <td><%= contestant.last_name %></td>
    <td><%= contestant.nickname %></td>
    <td><%= contestant.description %></td>
    <td><%= contestant.date_added %></td>
    <td><%= contestant.id %></td>
    <td><%= link_to 'Show', contestant %></td>
    <td><%= link_to 'Edit', edit_contestant_path(contestant) %></td>
    <td><%= link_to 'Destroy', contestant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

